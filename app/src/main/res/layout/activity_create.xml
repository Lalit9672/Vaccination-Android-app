<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:checked="true"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/selfs"
            android:text="Self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioButton>
        <RadioButton
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/selfs"
            android:id="@+id/others"
            android:text="Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioButton>
    </RelativeLayout>

    <TextView
        android:id="@+id/s"
        android:textSize="50dp"
        android:gravity="center"
        android:text="SIGN UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_margin="25dp"
        app:cardCornerRadius="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/name"
            android:hint="Patient Name"
            android:maxLength="15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <EditText
            android:hint="Relation with patitent"
            android:id="@+id/relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:id="@+id/emobile"
                android:layout_below="@+id/username"
                app:errorEnabled="true"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:hint="Mobile No."
                    android:maxLength="10"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
          <TextView
              android:layout_marginLeft="5dp"
              android:id="@+id/an"
           android:layout_centerVertical="true"
              android:textSize="20dp"
              android:text="Age"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"></TextView>
            <EditText
                android:inputType="number"
                android:layout_toRightOf="@+id/an"
                android:layout_marginLeft="5dp"
                android:maxLength="3"
                android:id="@+id/Age"
                android:hint="Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></EditText>

                <TextView
                    android:textSize="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/a"
                    android:layout_toRightOf="@+id/Age"
                    android:text="Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <Spinner
                    android:id="@+id/spin"
                    android:spinnerMode="dialog"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </RelativeLayout>
                <com.google.android.material.textfield.TextInputLayout
                android:layout_below="@+id/mobile"
                android:id="@+id/epassword"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/password"
                    android:hint="Password"
                    android:maxLength="20"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_below="@+id/password"
                android:id="@+id/ecpassword"
                app:counterMaxLength="15"
                app:errorEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Confirm Password"
                    android:layout_height="wrap_content">
                    android:id="@+id/cpassword"
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_gravity="center"
                android:id="@+id/conti"
                android:layout_centerHorizontal="true"
                android:text="CONTINUE"
                android:layout_below="@+id/cpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/conti"
                android:text="Already registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text"
                android:text="Log In HERE!!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>